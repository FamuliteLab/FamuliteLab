.works
  +pc()
    padding-top vw(120, $vpc)
  +sp()
    padding-top vw(200, $vsp)

.works__list
  +pc()
    margin-top vw(80, $vpc)
  +sp()
    margin-top vw(150, $vsp)

.works__list__itm
  +pc()
    display flex
    justify-content space-between
  
  + .works__list__itm
    +pc()
      margin-top vw(100, $vpc)
    +sp()
      margin-top vw(120, $vsp)

.works__list__blk
  +pc()
    width 50%

.works__list__itm__img
  +pc()
    margin vw(30, $vpc) auto 0
    width vw(100, $vpc)
  +sp()
    margin vw(30, $vsp) auto 0
    width vw(100, $vsp)

.works__button
  display block
  color #000
  font-family 'Montserrat'
  border 1px solid #000
  position relative
  +pc()
    width vw(150, $vpc)
    padding vw(15, $vpc)
    border-radius vw(3, $vpc)
    font(12,12,50,500)
    margin-top vw(20, $vpc)
    transition background-color 0.3s ease
    cursor pointer
  +sp()
    width vw(250, $vsp)
    padding vw(20, $vsp)
    border-radius vw(6, $vsp)
    font(12,12,50,500)
    margin-top vw(40, $vsp)
  &:after
    content ''
    border-top 1px solid #000
    border-right 1px solid #000
    position absolute
    top 50%
    transform translateY(-50%) rotate(45deg)
    +pc()
      width vw(7, $vpc)
      height vw(7, $vpc)
      right vw(20, $vpc)
    +sp()
      width vw(7, $vsp)
      height vw(7, $vsp)
      right vw(20, $vsp)
  &:hover
    +pc()
      background-color #000
      color #fff
      &:after
        border-top 1px solid #fff
        border-right 1px solid #fff