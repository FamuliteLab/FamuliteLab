.mv--inner
  width 100%
  height 100vh
  position relative
  
.mv__text
  font-family 'Montserrat'
  position absolute
  top 40%
  left 50%
  transform translate(-50%, -50%)
  white-space nowrap
  +pc()
    font(53,53,70,500)
  +sp()
    font(35,35,70,500)

//*** view text
[data-module*='ViewText']
  [data-view-text-target]
    span
      display inline-block 
      opacity 0
      transform translateX(-10px)
      &.anim
        opacity 1
        transform translateX(0)